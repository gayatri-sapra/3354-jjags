<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="20dp"
    android:background="@color/lavender">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginVertical="0dp"
            android:layout_marginTop="24dp"
            android:adjustViewBounds="true"
            android:clickable="false"
            android:contentDescription="@string/image_upload"
            android:cropToPadding="false"
            android:scaleType="center"
            app:srcCompat="@mipmap/ic_launcher_round"
            tools:srcCompat="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/image_upload" />

    <TextView
        android:id="@+id/petName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textColor="#0D6C8A"
        android:textColorLink="#0D6C8A"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <MultiAutoCompleteTextView
        android:id="@+id/nameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:hint="Enter Pet Name"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/owner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Owner: "
        android:textColor="#0D6C8A"
        android:textColorLink="#0D6C8A"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <MultiAutoCompleteTextView
        android:id="@+id/ownerInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:hint="Enter Owner Name"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/breed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Breed:"
        android:textColor="#0D6C8A"
        android:textSize="18sp"
        android:textStyle="bold" />

    <MultiAutoCompleteTextView
        android:id="@+id/breedInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:hint="Enter Pet Breed"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Birthday:"
        android:textColor="#0D6C8A"
        android:textSize="18sp"
        android:textStyle="bold" />

        <EditText
            android:id="@+id/birthdayInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:ems="10"
            android:hint="Enter Pet Birthday"
            android:inputType="date"
            android:maxLength="10" />

        <TextView
        android:id="@+id/age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Age:"
        android:textColor="#0D6C8A"
        android:textSize="18sp"
        android:textStyle="bold" />

        <EditText
            android:id="@+id/ageInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:ems="10"
            android:hint="Enter Pet Age"
            android:inputType="numberDecimal"
            android:maxLength="3" />

    </LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>