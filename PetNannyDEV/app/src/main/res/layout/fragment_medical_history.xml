<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/conditionsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Conditions:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <MultiAutoCompleteTextView
                android:id="@+id/petConditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:hint="Enter Pet Conditions"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/vetTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vet Info:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/vetName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:ems="10"
                android:hint="Vet Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/vetAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:ems="10"
                android:hint="Vet Address"
                android:inputType="textPostalAddress" />

            <EditText
                android:id="@+id/vetPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:ems="10"
                android:hint="Vet Phone Number"
                android:inputType="phone" />

            <TextView
                android:id="@+id/givenShotsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Given Shots:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <MultiAutoCompleteTextView
                android:id="@+id/givenShots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:hint="Enter Shots Given" />

            <TextView
                android:id="@+id/pendingShotsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pending Shots:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <MultiAutoCompleteTextView
                android:id="@+id/pendingShots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:hint="Enter Shots Pending" />

            <TextView
                android:id="@+id/consumptionsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Consumptions:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <MultiAutoCompleteTextView
                android:id="@+id/foodConsumptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:hint="Enter Pet's Foods" />

            <TextView
                android:id="@+id/groomingTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grooming:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <MultiAutoCompleteTextView
                android:id="@+id/grooming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:hint="Enter Grooming Frequency" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>